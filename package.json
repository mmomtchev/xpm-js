{
  "name": "xpm",
  "version": "0.17.0",
  "description": "The xPack project manager command line tool",
  "type": "module",
  "exports": {
    "request": "./index.cjs",
    "import": "./index.mjs"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./tests"
  },
  "bin": {
    "xpm": "bin/xpm.js"
  },
  "scripts": {
    "npm-install ": "npm install",
    "fix": "standard --fix",
    "outdated": "npm outdated",
    "update": "npm update",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "postversion": "git push origin --all && git push origin --tags",
    "pack": "npm pack",
    "git-log": "git log --pretty='%cd * %h %s' --date=short",
    "lint": "standard",
    "test": "npm run lint && npm run test-tap -s",
    "test-tap": "tap --timeout 300 --disable-coverage --allow-empty-coverage run \"tests/tap/*.js\"",
    "test-tap100": "tap --timeout 300 run \"tests/tap/*.js\"",
    "test-coverage": "tap --timeout 600 --allow-incomplete-coverage run \"tests/tap/*.js\"",
    "tap": "tap --timeout 300 --disable-coverage --allow-empty-coverage run",
    "link": "npm link @ilg/cli-start-options",
    "prepublishOnly": "standard && npm run test-tap -s",
    "postpublish": "git push origin --follow-tags",
    "dumpconf": "env | sort | uniq",
    "deep-clean": "del-cli node_modules package-lock.json",
    "npm-version": "echo $(which node) $(node --version) && echo $(which npm) $(npm --version)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xpack/xpm-js.git"
  },
  "keywords": [
    "xpack",
    "package",
    "manager",
    "npm"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/xpm-js/issues/"
  },
  "homepage": "https://xpack.github.io/xpm/",
  "engines": {
    "node": " >=16.14.0"
  },
  "dependencies": {
    "@ilg/cli-start-options": "^0.8.2",
    "@npmcli/arborist": "^7.1.0",
    "@xpack/cmd-shim": "^4.1.0-2",
    "@xpack/xpm-liquid": "^1.2.2",
    "cacache": "^18.0.0",
    "cp-file": "^10.0.0",
    "cross-spawn": "^7.0.3",
    "decompress": "^4.2.1",
    "del": "^7.1.0",
    "https-proxy-agent": "^7.0.2",
    "is-windows": "^1.0.2",
    "liquidjs": "^10.9.2",
    "make-dir": "^4.0.0",
    "mz": "^2.7.0",
    "node-fetch": "^3.3.2",
    "pacote": "^17.0.4",
    "parse-git-config": "^3.0.0",
    "proxy-from-env": "^1.1.0",
    "semver": "^7.5.4",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "del-cli": "^5.1.0",
    "standard": "^17.1.0",
    "tap": "^18.1.5"
  },
  "bundleDependencies": [
    "@ilg/cli-start-options",
    "@npmcli/arborist",
    "@xpack/cmd-shim",
    "@xpack/xpm-liquid",
    "cacache",
    "cp-file",
    "cross-spawn",
    "decompress",
    "del",
    "https-proxy-agent",
    "is-windows",
    "liquidjs",
    "make-dir",
    "mz",
    "node-fetch",
    "pacote",
    "parse-git-config",
    "proxy-from-env",
    "semver",
    "tar"
  ]
}
