{
  "name": "xpm",
  "version": "0.15.0-pre",
  "type": "module",
  "description": "The xPack project manager command line tool",
  "exports": {
    "import": "./index.js"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./tests"
  },
  "bin": {
    "xpm": "bin/xpm.js"
  },
  "scripts": {
    "npm-install ": "npm install",
    "fix": "standard --fix",
    "outdated": "npm outdated",
    "update": "npm update",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "postversion": "git push origin --all && git push origin --tags",
    "pack": "npm pack",
    "git-log": "git log --pretty='%cd * %h %s' --date=short",
    "lint": "standard",
    "test": "npm run lint && npm run test-tap -s",
    "test-tap100": "tap --reporter=classic --timeout 300 --100 \"tests/tap/*.js\"",
    "test-coverage": "tap --coverage --reporter=classic --timeout 600 --no-check-coverage \"tests/tap/*.js\"",
    "test-tap": "tap --reporter=classic --timeout 300 --no-coverage \"tests/tap/*.js\"",
    "tap": "tap --reporter=spec --timeout 300 --no-coverage",
    "link": "npm link @ilg/cli-start-options",
    "prepublishOnly": "standard && npm run test-tap -s",
    "postpublish": "git push origin --follow-tags",
    "dumpconf": "env | sort | uniq",
    "deep-clean": "rm -rf node_modules package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xpack/xpm-js.git"
  },
  "keywords": [
    "xpack",
    "package",
    "manager",
    "npm"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/xpm-js/issues/"
  },
  "homepage": "https://xpack.github.io/xpm/",
  "engines": {
    "node": " >=14.13.1 || >=15.3.0 || >=16.0.0"
  },
  "dependencies": {
    "@ilg/cli-start-options": "^0.8.1",
    "@xpack/cmd-shim": "^4.1.0-2",
    "@xpack/xpm-liquid": "^1.2.2",
    "cacache": "^17.0.4",
    "cp-file": "^10.0.0",
    "cross-spawn": "^7.0.3",
    "decompress": "^4.2.1",
    "del": "^7.0.0",
    "is-windows": "^1.0.2",
    "liquidjs": "^10.4.0",
    "make-dir": "^3.1.0",
    "mz": "^2.7.0",
    "node-fetch": "^3.3.0",
    "npm": "^9.4.2",
    "@npmcli/arborist": "^6.2.2",
    "pacote": "^15.0.8",
    "parse-git-config": "^3.0.0",
    "semver": "^7.3.8",
    "tar": "^6.1.13"
  },
  "devDependencies": {
    "standard": "^17.0.0",
    "tap": "^16.3.4"
  },
  "bundleDependencies": [
    "@ilg/cli-start-options",
    "@xpack/cmd-shim",
    "@xpack/xpm-liquid",
    "cacache",
    "cp-file",
    "cross-spawn",
    "decompress",
    "del",
    "is-windows",
    "liquidjs",
    "make-dir",
    "mz",
    "node-fetch",
    "pacote",
    "parse-git-config",
    "semver",
    "tar"
  ]
}
